generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  password String
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  images      String[]
  techStack   String[]
  liveLink    String?
  githubLink  String?
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Skill {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  category String // e.g., Frontend, Backend, Tools
  level    Int    @default(0) // 0-100
  icon     String? // URL or icon name
}

model Experience {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  role        String
  company     String
  duration    String
  description String
  startDate   DateTime @default(now())
  endDate     DateTime?
  current     Boolean  @default(false)
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  subject   String?
  message   String
  createdAt DateTime @default(now())
  read      Boolean  @default(false)
}

model Profile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  about     String
  resumeUrl String?
  email     String?
  phone     String?
  github    String?
  linkedin  String?
  twitter   String?
  updatedAt DateTime @updatedAt
}
